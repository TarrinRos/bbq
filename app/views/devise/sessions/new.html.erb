<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container">
    <div class="row main">
      <div class="panel-heading">
        <div class="panel-title text-center">
          <h1 class="title">Войти</h1>
          <hr/>
        </div>
      </div>
      <div class="main-login main-center">
        <form class="form-horizontal" method="post" action="#">

          <div class="form-group">
            <%= f.label :email, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Ваш email" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "cols-sm-2 control-label" %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Введите Ваш пароль" %>
              </div>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <div class="form-group">
              <%= f.submit "Вход", class: "btn btn-primary btn-lg btn-block login-button" %>
            </div>
          </div>

          <div class="login-register">
            <%= render "devise/shared/links" %>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>