<h1>Доступ только по пинкоду</h1>

<%= form_tag('', method: 'post') do %>
  <div class="form-group">
    <%= label 'Пинкод', :pincode %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="action">
    <%= submit_tag %>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>